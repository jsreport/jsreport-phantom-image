{
  "name": "jsreport-phantom-image",
  "version": "1.0.0",
  "description": "jsreport recipe which is rendering images from html using phantomjs",
  "scripts": {
    "test": "mocha test --timeout 7000 && standard",
    "build": "jsreport-studio-build",
    "prepublish": "in-publish && jsreport-studio-build || not-in-publish"
  },
  "keywords": [
    "jsreport"
  ],
  "homepage": "https://github.com/jsreport/jsreport-phantom-image",
  "repository": {
    "type": "git",
    "url": "git@github.com:jsreport/jsreport-phantom-image.git"
  },
  "standard": {
